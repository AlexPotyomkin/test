<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_100">


    <EditText
        android:id="@+id/editText"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"
        android:inputType="time"
        android:text="@string/time_interval"
        android:textColor="@color/material_blue_grey_950" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="@string/Notification_text"
        android:textColor="@color/material_blue_grey_950" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/img1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginRight="45dp"
        android:layout_marginTop="23dp"
        android:text="@string/Choose_img" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="70dp"
        android:text="@string/sound"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/material_blue_grey_950" />

    <Button
        android:id="@+id/button3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button2"
        android:layout_marginRight="45dp"
        android:layout_marginTop="80dp"
        android:text="@string/Choose_sound" />


    <Switch
        android:id="@+id/swtch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textColor="@color/material_grey_100"
        android:textOff="@string/uncheckedstate"
        android:textOn="@string/checkedstate"
        android:textStyle="bold|italic"
        android:thumb="@drawable/customswitchselector"
        android:thumbTextPadding="15dp"
        android:track="@drawable/customtrack"
        android:typeface="sans" />
</RelativeLayout>