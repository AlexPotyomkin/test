<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <EditText
        android:id="@+id/etPeriod"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:gravity="center_horizontal"
        android:hint="@string/hint_period"
        android:inputType="time"
        android:maxLength="8"
        android:textColor="@color/primary_color"
        android:textColorHint="@color/hint_color"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etNotification"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPeriod"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:hint="@string/hint_notification_text"
        android:maxLines="2"
        android:maxLength="25"
        android:textColor="@color/primary_color"
        android:textColorHint="@color/hint_color"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/ivNotificationIco"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/etNotification"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/img1" />

    <Button
        android:id="@+id/btChooseImage"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ivNotificationIco"
        android:layout_marginRight="10dp"
        android:layout_marginTop="21dp"
        android:text="@string/Choose_img"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvChosenSound"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivNotificationIco"
        android:layout_below="@+id/ivNotificationIco"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="@string/sound"
        android:textColor="@color/primary_color"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btChooseSound"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btChooseImage"
        android:layout_marginRight="10dp"
        android:layout_marginTop="36dp"
        android:text="@string/Choose_sound"
        android:textSize="12sp" />

    <Switch
        android:id="@+id/swtch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:thumb="@drawable/customswitchselector"
        android:track="@drawable/customtrack" />

</RelativeLayout>